<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/signImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="Zodiac Sign Image" />

    <TextView
        android:id="@+id/signNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="#0C2436"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:text="Zodiac Sign Name" />

    <TextView
        android:id="@+id/signDescriptionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_marginTop="16dp"
        android:text="Description about the Zodiac Sign" />
</LinearLayout>
